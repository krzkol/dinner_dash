.well
  %h1 New Item
  - if @item.errors.any?
    .alert.alert-danger
      %h4
        = pluralize(@item.errors.count, "error")
        prohibited this data from being saved
      %ul
      - @item.errors.full_messages.each do |msg|
        %li= msg
  = render 'form'
  = link_to 'Back', items_path
